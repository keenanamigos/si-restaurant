<p id="notice"><%= notice %></p>

<h1 class="white">Listing Categories</h1>

<table>
  <thead>
    <tr>
      <th class="white">Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td class="white"><%= category.title %><span>&nbsp;</span></td>
        <td><%= link_to 'Show', category, class: 'white' %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: 'white' %></td>
        <td><%= link_to 'Destroy', category, class: 'white', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class: 'white' %>
